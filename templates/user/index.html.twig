{% extends 'layout.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-12 mb-5">
                <div class="card w-100 m-auto">
                    <div class="card-header text-center">
                        <h1 class="">Gestion des utilisateurs</h1>
                    </div>
                    <div class="row d-flex justify-content-around pt-3">
                        <div class="col-2">
                            <a class="btn btn-primary" href="{{ path('user_new') }}">Ajouter un utilisateur</a>
                        </div>
                        <div class="col-9">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col-3">{{ form_row(form.position) }}</div>
                                <div class="col-3">{{ form_row(form.role) }}</div>
                                <div class="col-4">{{ form_row(form.name) }}</div>
                                <div class="col-2"><button class="btn btn-primary">Rechercher</button></div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>

                    <table class="table">
                        <thead>
                        <tr class="text-center">
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Rôle</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th>Date d'entrée</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr class="text-center">
                                <td class="align-middle">{{ user.lastname }}</td>
                                <td class="align-middle">{{ user.firstname }}</td>
                                <td class="align-middle">{{ user.role.name }}</td>
                                <td class="align-middle">{{ user.email }}</td>
                                <td class="align-middle">{{ user.telephone }}</td>
                                <td class="align-middle">{{ user.startDate ? user.startDate|date ("d/m/Y") : '' }}</td>
                                <td class="align-middle">
                                    <a class="text-decoration-none mr-2" title="Voir"
                                       href="{{ path('profile', {'user': user.id}) }}">
                                        <i class="fas fa-search-plus"></i>
                                    </a>
                                    <a class="text-decoration-none" title="Modifier"
                                       href="{{ path('user_edit', {'id': user.id}) }}">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="13">Aucun enregistrement</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
