{% extends 'layout.html.twig' %}

{% block title %}Profil de {{ user.firstname }} {{ user.lastname }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header text-center">
                        <h1>Profil utilisateur</h1>
                    </div>
                        <table class="table">
                            <tbody>

                                <tr>
                                    <th>Prénom</th>
                                    <td>{{ user.firstname }}</td>
                                </tr>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ user.lastname }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <th>Téléphone</th>
                                    <td>{{ user.telephone }}</td>
                                </tr>
                                <tr>
                                    <th>Rôle</th>
                                    <td>{{ user.role.name }}</td>
                                </tr>
                                <tr>
                                    <th>Métier</th>
                                    <td>{{ user.position ? user.position.name : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Manager</th>
                                    <td>{{ user.manager ? user.manager.firstname ~ ' ' ~ user.manager.lastname : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Parrain</th>
                                    <td>{{ user.mentor ? user.mentor.firstname ~ ' ' ~ user.mentor.lastname : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Référent</th>
                                    <td>{{ user.referent ? user.referent.firstname ~ ' ' ~ user.referent.lastname : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Date d'entrée</th>
                                    <td>{{ user.startDate ? user.startDate|date ("d/m/Y") : '' }}</td>
                                </tr>
                            </tbody>
                        </table>
                    <div class="d-flex align-items-end">
                            <a class="btn btn-primary mr-4 ml-4 mb-4" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>

                    <div class="mb-4">
                    {{ include('user/_delete_form.html.twig') }}
                    </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center mb-5">
                <a class="btn btn-primary" href="{{ path('user_index') }}">Retour</a>
        </div>
    </div>
{% endblock %}
