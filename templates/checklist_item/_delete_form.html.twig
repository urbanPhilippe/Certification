<form method="post" action="{{ path('checklist_item_delete', {'id': checklist_item.id}) }}"
      onsubmit="return confirm('La suppression de cet élément est définitive, êtes-vous sûr(e)?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ checklist_item.id) }}">
    <button class="btn btn-danger mt-4">Supprimer</button>
</form>
