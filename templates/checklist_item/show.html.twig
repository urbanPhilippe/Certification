{% extends 'layout.html.twig' %}

{% block title %}Élément de la checklist{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header text-center">
                        <h1>L'élement de la Checklist</h1>
                    </div>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Nom</th>
                                <td>{{ checklist_item.name }}</td>
                            </tr>
                            <tr>
                                <th>Catégorie</th>
                                <td>{{ checklist_item.category }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="d-flex align-items-end">
                            <a class="btn btn-primary mr-4 ml-4 mb-4" href="{{ path('checklist_item_edit', {'id': checklist_item.id}) }}">Modifier</a>
                        <div class="mb-4">
                        {{ include('checklist_item/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center mb-3">
            <a class="btn btn-primary" href="{{ path('checklist_item_index') }}">Retour</a>
        </div>
    </div>
{% endblock %}
