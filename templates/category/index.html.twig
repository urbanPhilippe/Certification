{% extends 'layout.html.twig' %}

{% block title %}Gestion des catégories d'articles{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-12 mb-5">
                <div class="card w-50 m-auto">
                    <div class="card-header text-center">
                        <h1>Catégories d'articles</h1>
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                        <a href="{{ path('category_new') }}" class="btn btn-primary  mb-3">
                            Créer une nouvelle catégorie
                        </a>
                        <a href="{{ path('content_new') }}" class="btn btn-primary ml-3 mb-3">
                            Créer un nouveau contenu
                        </a>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th>Nom</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for category in categories %}
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>{{ category.name }}</td>
                                <td>
                                    <a href="{{ path('category_show', {'id': category.id}) }}" title="Voir">
                                        <i class="fas fa-search-plus mr-5"></i>
                                    </a>
                                    <a href="{{ path('category_edit', {'id': category.id}) }}" title="Modifier">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">Aucun enregistrement</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
