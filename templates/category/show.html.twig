{% extends 'layout.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header text-center">
                        <h1>Catégorie</h1>

                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Nom</th>
                                <td>{{ category.name }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <div class="d-flex align-items-end">
                            <a class="btn btn-primary mr-4 ml-4 mb-4"
                               href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
                            <div class="mb-4">
                                {{ include('category/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center mb-3">
        <a class="btn btn-primary" href="{{ path('category_index') }}">Retour</a>
    </div>

{% endblock %}
