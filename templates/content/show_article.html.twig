{% extends 'layout.html.twig' %}

{% block title %}Nemea{% endblock %}

{% block body %}

    <div class="container-fluid d-flex flex-column">
        <div class="page-header">
            <h1 class="ml-5">{{ content.category.name }}</h1>
            <div class="row">
                <div class="col-12">
                    <div class="card">

                        <h5 class="card-header font-weight-bold text-uppercase text-center py-4 mb-0">{{ content.title }}</h5>

                        <div class="card-body nemea-content">
                            {{ content.content|raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

