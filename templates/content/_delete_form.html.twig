<form method="post" action="{{ path('content_delete', {'id': content.id}) }}"
      onsubmit="return confirm('La suppression de cet élément est définitive, êtes-vous sûr(e)?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ content.id) }}">
    <button class="btn btn-danger mt-3">Supprimer</button>
</form>
