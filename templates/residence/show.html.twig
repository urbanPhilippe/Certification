{% extends 'layout.html.twig' %}

{% block title %}Residence{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header text-center">
                    <h1>Residence</h1>
                </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ residence.name }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ residence.city }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ residence.description }}</td>
            </tr>
        </tbody>
    </table>
                <div class="d-flex align-items-end">
                    <a class="btn btn-primary mr-4 ml-4 mb-4" href="{{ path('residence_edit', {'id': residence.id}) }}">Modifier</a>
                    <div class="mb-4">
                        {{ include('residence/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center mb-3">
        <a class="btn btn-primary" href="{{ path('residence_index') }}">Retour</a>
    </div>
</div>

{% endblock %}
