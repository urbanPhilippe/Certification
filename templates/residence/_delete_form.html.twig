<form method="post" action="{{ path('residence_delete', {'id': residence.id}) }}"
      onsubmit="return confirm('La suppression de cet élément est définitive, êtes-vous sûr(e)?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ residence.id) }}">
    <button class="btn btn-danger mt-4">Supprimer</button>
</form>
