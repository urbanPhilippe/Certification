{{ form_start(form) }}
<div class="m-3">
    <div class="row">
        <div class="col-md-12">{{ form_row ( form.number ) }}</div>
    </div>
    <div class="row">
        <div class="col-md-12">{{ form_row ( form.name ) }}</div>
    </div>
    <div class="row">
        <div class="col-md-12">{{ form_row ( form.description ) }}</div>
    </div>
    <div class="row">
        <div class="col-md-4">{{ form_row ( form.duration) }}</div>
        <div class="col-md-4 d-flex flex-column">
            <div>
                {{ form_row ( form.fontAwesome ) }}
            </div>
            <div class="align-self-center">
                <a class="btn btn-outline-primary" href="https://fontawesome.com/icons?d=gallery" target="_blank">Chercher une ic√¥ne</a>
            </div>
        </div>
        <div class="col-md-4 d-flex flex-column">
            <div>
                {{ form_row ( form.color ) }}
            </div>
            <div class="align-self-center">
                <a class="btn btn-outline-primary" href="https://htmlcolorcodes.com/fr/" target="_blank">Chercher une couleur</a>
            </div>
        </div>
    </div>
</div>

{{ form_widget(form) }}
<button class="btn btn-primary mb-3">{{ button_label|default('Sauvegarder') }}</button>
{{ form_end(form) }}
